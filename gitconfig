[alias]
	# Shorthands
	br = branch
	brr = branch --remote
	ci = commit
	co = checkout
	st = status
	last = "log -1 HEAD"
  adne = "commit --amend --no-edit"
	# Actions
	open-gh = !"git remote -v | awk '/origin.*push/ {print $2}' | xargs open"
	last-sha = "!f() { git rev-list HEAD --reverse | tail -\"${1:-1}\"; }; f"

